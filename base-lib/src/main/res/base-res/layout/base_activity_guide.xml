<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.chris.base.widget.ultraviewpager.UltraViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.chris.base.widget.roundview.RoundTextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:gravity="center"
        android:text="立即使用"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_14.5"
        android:visibility="gone"
        app:rv_backgroundColor="#444444"
        app:rv_backgroundPressColor="#33444444"
        app:rv_cornerRadius="25dp"/>

</RelativeLayout>
